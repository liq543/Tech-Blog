<div class="container-fluid">
    <div class="row card shadow p-3 mb-2 bg-body rounded">
        <div class="card-header pt-2 px-3 mb-2">
            <div>
                <h3>{{title}}</h3>
                <p class="text-end">Created By: {{user.username}} on {{format_date date_created}}</p>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">{{text}}</p>
        </div>
    </div>

    {{#if comments.length}}
    <div class="row card shadow p-3 mb-5 bg-body rounded">
        <div class="card-header pt-3 px-4 mb-2">
            <h4>Comments</h4>
        </div>
        {{#each comments as |comment|}}
        <div class="border border-dark border-1 rounded mb-2">
            <p>{{comment.text}}</p>
            <p>Written by {{comment.user.username}} on {{format_date comment.date_created}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <div>
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#comment-form">Add Comment</button>
    </div>
    <form class="mb-3 collapse" id="comment-form">
        <label for="comment-context" class="form-label">Comment Context</label>
        <textarea class="form-control" id="comment-text" rows="3"></textarea>
        <button type="submit" class="btn btn-secondary mt-2" id="submit-comment">Submit Comment</button>
    </form>
</div>

<script src="/js/comment.js"></script>