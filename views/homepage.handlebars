<div class="container-fluid">
        {{#each posts as |post|}}
        <div class="row card shadow p-3 mb-5 bg-body rounded">
            <div class="card-header pt-2 px-3 mb-2">
                <div>
                    <h3><a href="/post/{{post.id}}">{{post.title}}</a></h3>
                    <p class="text-end">Created By: {{post.user.username}} on {{format_date post.date_created}}</p>
                </div>
                <div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.text}}</p>
            </div>
        </div>
        {{/each}}
</div>