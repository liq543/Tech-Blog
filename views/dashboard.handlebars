<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

{{#if posts.length}}
<div class="container-fluid">
    {{#each posts as |post|}}
        <div class="row card shadow p-3 mb-5 bg-body rounded">
            <div class="card-header pt-2 px-3 mb-2">
                <div>
                    <h3><a href="/update/{{post.id}}">{{post.title}}</a></h3>
                    <p class="text-end">Created On {{format_date post.date_created}}</p>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{post.text}}</p>
            </div>
        </div>
    {{/each}}
</div>
{{/if}}

<div>
    <a class="btn btn-primary" href="/create" role="button">New Post</a>
</div>